<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{{fullName}} - Resume</title>
    <style>
      @page { size: A4; margin: 20mm; }
      * { box-sizing: border-box; margin: 0; padding: 0; }
      body {
        font-family: 'Segoe UI', sans-serif;
        font-size: 12px;
        color: #222;
        line-height: 1.6;
      }
      a { color: #0366d6; text-decoration: none; }
      header {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      .left-header { flex: 1; }
      .right-header { text-align: right; font-size: 0.85rem; color: #444; }
      .profile-pic {
        width: 120px;
        border-radius: 8px;
        margin-top: 0.5rem;
        object-fit: cover;
      }
      .name { font-size: 1.8rem; font-weight: 600; }
      .role { font-weight: 500; margin-top: 0.25rem; }
      .contact { margin-top: 0.5rem; color: #444; }
      .slogan {
        text-align: center;
        font-style: italic;
        margin: 1rem 0;
        font-size: 0.95rem;
        color: #555;
      }
      section { margin-top: 1.25rem; }
      h2 {
        font-size: 1rem;
        font-weight: 600;
        border-bottom: 1px solid #ddd;
        margin-bottom: 0.75rem;
        padding-bottom: 0.25rem;
        color: #444;
        text-transform: uppercase;
      }
      .skills, .pill-list {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
      }
      .skill-tag, .pill {
        border: 1px solid #ccc;
        border-radius: 1rem;
        padding: 0.25rem 0.75rem;
        font-size: 0.85rem;
      }
      .item { margin-bottom: 1rem; }
      .item-header {
        display: flex;
        justify-content: space-between;
        font-weight: 600;
      }
      .item-sub { color: #666; font-size: 0.9rem; margin-bottom: 0.25rem; }
      .item ul { margin-left: 1.25rem; list-style: disc; }
    </style>
  </head>
  <body>
    <header>
      <div class="left-header">
        {{#if profilePicture}}<img src="{{profilePicture}}" class="profile-pic" alt="Profile Picture" />{{/if}}
        <div class="name">{{fullName}}</div>
        <div class="role">{{title}}</div>
        <div class="contact">{{address}} | {{phone}} | {{email}}</div>
      </div>
      <div class="right-header">
        {{#if linkedin}}<div>LinkedIn: <a href="{{linkedin}}">{{linkedin}}</a></div>{{/if}}
        {{#if github}}<div>GitHub: <a href="{{github}}">{{github}}</a></div>{{/if}}
        {{#if twitter}}<div>Twitter: <a href="{{twitter}}">{{twitter}}</a></div>{{/if}}
        {{#if website}}<div>Website: <a href="{{website}}">{{website}}</a></div>{{/if}}
      </div>
    </header>

    <div class="slogan">{{slogan}}</div>

    <section><h2>About</h2><p>{{about}}</p></section>

    <section><h2>Skills</h2><div class="skills">{{#each skills}}<div class="skill-tag">{{this}}</div>{{/each}}</div></section>

    <section><h2>Experience</h2>
      {{#each experience}}
        <div class="item">
          <div class="item-header">
            <div>{{position}} - {{company}}</div>
            <div>{{startDate}} to {{#if isCurrent}}Present{{else}}{{endDate}}{{/if}}</div>
          </div>
          <div class="item-sub">{{location}}</div>
          <ul>{{#each responsibilities}}<li>{{this}}</li>{{/each}}</ul>
          {{#if achievements}}<p><strong>Achievements:</strong></p><ul>{{#each achievements}}<li>{{this}}</li>{{/each}}</ul>{{/if}}
        </div>
      {{/each}}
    </section>

    <section><h2>Education</h2>
      {{#each education}}
        <div class="item">
          <div class="item-header">
            <div>{{degree}}, {{fieldOfStudy}}</div>
            <div>{{startDate}} to {{endDate}}</div>
          </div>
          <div class="item-sub">{{institution}}, {{location}}</div>
          <p>GPA: {{gpa}}</p>
          {{#if honors}}<p>Honors: {{honors.join ", "}}</p>{{/if}}
        </div>
      {{/each}}
    </section>

    <section><h2>Certificates</h2>
      {{#each certificates}}
        <div class="item">
          <div class="item-header">
            <div>{{title}} - {{issuingOrganization}}</div>
            <div>{{issueDate}}</div>
          </div>
          {{#if credentialURL}}<div class="item-sub"><a href="{{credentialURL}}">{{credentialURL}}</a></div>{{/if}}
        </div>
      {{/each}}
    </section>

    <section><h2>Awards</h2>
      {{#each awards}}
        <div class="item">
          <div class="item-header">{{title}} - {{organization}}</div>
          <div class="item-sub">Received: {{dateReceived}}</div>
          <p>{{description}}</p>
        </div>
      {{/each}}
    </section>

    <section><h2>Publications</h2>
      {{#each publications}}
        <div class="item">
          <div class="item-header">{{title}}</div>
          <div class="item-sub">{{journal}}, {{publisher}} - {{publicationDate}}</div>
          <div><strong>Authors:</strong> {{authors.join ", "}}</div>
          {{#if doi}}<div><strong>DOI:</strong> {{doi}}</div>{{/if}}
          {{#if url}}<div><a href="{{url}}">View</a></div>{{/if}}
          <p>{{summary}}</p>
        </div>
      {{/each}}
    </section>

    <section><h2>Projects</h2>
      {{#each projects}}
        <div class="item">
          <div class="item-header">{{name}} - {{role}}</div>
          <div class="item-sub">{{startDate}} to {{#if isOngoing}}Present{{else}}{{endDate}}{{/if}}</div>
          <p>{{description}}</p>
          <div><strong>Technologies:</strong> {{technologies.join ", "}}</div>
          {{#if repository}}<div><a href="{{repository}}">Repository</a></div>{{/if}}
          {{#if demoURL}}<div><a href="{{demoURL}}">Demo</a></div>{{/if}}
        </div>
      {{/each}}
    </section>

    <section><h2>Languages</h2>
      <div class="pill-list">{{#each languages}}<div class="pill">{{this}}</div>{{/each}}</div>
    </section>

    <section><h2>Interests</h2>
      <div class="pill-list">{{#each interests}}<div class="pill">{{this}}</div>{{/each}}</div>
    </section>

    <section><h2>Volunteer</h2>
      {{#each volunteer}}
        <div class="item">
          <div class="item-header">{{role}} - {{organization}}</div>
          <div class="item-sub">Year: {{year}}</div>
        </div>
      {{/each}}
    </section>

    <section><h2>References</h2>
      {{#each references}}
        <div class="item">
          <strong>{{name}}</strong> â€” {{relation}}<br />
          Contact: {{contact}}
        </div>
      {{/each}}
    </section>
  </body>
</html>
